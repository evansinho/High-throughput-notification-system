# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# Optimized for high-throughput: increased connection pool from 10 to 20
DATABASE_URL="postgresql://notification_user:notification_password@localhost:5432/notification_db?schema=public&connection_limit=20&pool_timeout=30"
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BROKER=localhost:9092
KAFKA_CLIENT_ID=notification-service
KAFKA_CONSUMER_GROUP=notification-workers

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRATION=7d

# External Services (Optional - for sending notifications)
# SendGrid (Email)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@notification-system.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Firebase Cloud Messaging (Push Notifications)
FIREBASE_SERVICE_ACCOUNT_PATH=
FIREBASE_PROJECT_ID=

# Observability (Optional - will be configured in later days)
JAEGER_ENDPOINT=
PROMETHEUS_PORT=9090

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Feature Flags
ENABLE_KAFKA_CONSUMER=true
ENABLE_RATE_LIMITING=true
ENABLE_MOCK_SERVICES=false