# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL="postgresql://notification_user:notification_password@localhost:5432/notification_db?schema=public"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BROKER=localhost:9092
KAFKA_CLIENT_ID=notification-service
KAFKA_CONSUMER_GROUP=notification-workers

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRATION=7d

# External Services (Optional - for sending notifications)
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Observability (Optional - will be configured in later days)
JAEGER_ENDPOINT=
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_KAFKA_CONSUMER=true
ENABLE_RATE_LIMITING=true